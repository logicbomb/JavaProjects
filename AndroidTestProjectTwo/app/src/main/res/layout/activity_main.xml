<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TestAppActivity" android:id="@+id/mapView">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello World!"
                    android:id="@+id/textDisplay"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/inputText" android:text="http://google.com"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="51dp">
                <Button
                        android:text="Go"
                        android:layout_width="194dp"
                        android:layout_height="wrap_content" android:id="@+id/btninput"
                />
                <Button
                        android:text="View Activity 2"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content" android:id="@+id/btnToActivity2"/>
            </LinearLayout>
            <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/progressBar" tools:visibility="visible"
            />
            <WebView
                    android:layout_width="match_parent"
                    android:layout_height="565dp" android:id="@+id/webview" android:visibility="visible">
            </WebView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>